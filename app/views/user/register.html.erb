<h2>Register</h2>
<% form_for :user do |form| %>
  <fieldset>
    <legend>Enter Your Details</legend>
    <div class="form_row">
      <label for="screen_name">Screen name:</label>
      <%= form.text_field :screen_name, :size => 20, :maxlength => 40 %>
    </div>

    <div class="form_row">
      <label for="email">Email:</label>
      <%= form.text_field :email, :size => 30, :maxlength => 50 %>
    </div>

    <div class="form_row">
      <label for="password">Password:</label>
      <%= form.password_field :password, :size => 10, :maxlength => 40 %>
    </div>

    <div class="form_row">
      <%= submit_tag "Register!", :class => "submit" %>
    </div>
  </fieldset>
<% end %>